<h1>New event</h1>

<!--<%= render 'form' %>-->

<%= form_for @event do |form| %>

  <div class='form-group'>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class='form-group'>
    <%= form.label :category_id %>
    <%= form.select "category_id", options_from_collection_for_select(Category.all, "id", "kind") %>
  </div>

  <div class='form-group'>
    <%= form.label :location_id %>
    <%= form.select "location_id", options_from_collection_for_select(Location.all, "id", "area") %>
  </div>

  <div class='form-group'>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class='form-group'>
    <%= form.label :maker_id %>
    <%= form.select "maker_id", options_from_collection_for_select(Maker.all, "id", "name") %>
  </div>

  <%= form.submit "Create Event" %>

  <% end %>

