<h1>Listing events</h1>

<%= link_to 'New Event', "/events/new", class: 'btn btn-primary' %>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Location</th>
      <th>Description</th>
      <th>Maker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.category_id %></td>
        <td><%= event.location_id %></td>
        <td><%= event.description %></td>
        <td><%= event.maker_id %></td>
        <td><%= event.maker.name %></td>
        <td><%= link_to 'Show', "/events/#{event.id}", class: "btn btn-primary" %></td>
        <!--<td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

